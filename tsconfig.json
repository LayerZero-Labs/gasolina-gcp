{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2020",
        "experimentalDecorators": true,
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "**/__mocks__/*",
        "**/__tests__/*",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "ts-node": {
        "files": true,
        "experimentalResolverFeatures": true,
        "compilerOptions": {
            "module": "CommonJS",
            "types": ["node"]
        }
    }
}
